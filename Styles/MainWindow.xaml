<Window x:Class="Styles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Styles"
        mc:Ignorable="d"
        Title="MainWindow" Height="136.131" Width="348.905">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Coral"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button" x:Key="styButtonMain">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="Button" x:Key="styButtonInh" BasedOn="{StaticResource styButtonMain}">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <Button Content="Click1"
                FontSize="25"/>
        <Button Content="Click2" Style="{StaticResource styButtonMain}"/>
        <Button Content="Click3" Style="{StaticResource styButtonInh}"/>
    </StackPanel>
</Window>
